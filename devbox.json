{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
    "packages": [
      "flutter@latest",
      "awscli2@latest",
      "aws-cdk-cli@latest"  
    ],
    "shell": {
      "init_hook": "./scripts/devbox-init-hook.sh"
    },
    "services": {
      "p8i_app": {
        "command": "./scripts/start-p8i-app.sh",
        "process_compose": {
          "availability": {
            "restart": "on_failure"
          }
        }
      }
    }
  }
  